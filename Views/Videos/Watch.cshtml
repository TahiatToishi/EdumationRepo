@model EduMation.Models.Video

@{
    ViewData["Title"] = "Watch - " + Model.Title;
}

<h1>@Model.Title</h1>
<p>@Model.Description</p>
<video controls style="width: 100%; max-width: 800px;">
    <source src="@Model.VideoUrl" type="video/mp4">
    Your browser does not support the video tag.
</video>
<p><strong>Genre:</strong> @Model.Genre</p>
<p><strong>Uploaded on:</strong> @Model.UploadDate.ToString("MMM dd, yyyy")</p>

<form asp-action="Add" asp-controller="Favorites" method="post">
    <input type="hidden" name="videoId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Add to Favorites</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Back to Videos</a>