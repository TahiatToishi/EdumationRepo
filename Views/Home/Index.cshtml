@model EduMation.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var favoritedVideoIds = ViewBag.FavoritedVideoIds as List<int> ?? new List<int>();
}
<div class="container">
    <!-- Featured Video Section -->
    @if (Model.FeaturedVideo != null)
    {
        <h2>Featured Video</h2>
        <div class="card mb-4">
            <a href="@Url.Action("Details", "Videos", new { id = Model.FeaturedVideo.Id })">
                @if (!string.IsNullOrEmpty(Model.FeaturedVideo.ThumbnailUrl))
                {
                    <img src="@Model.FeaturedVideo.ThumbnailUrl" class="card-img-top" alt="@Model.FeaturedVideo.Title Thumbnail" style="max-height: 300px; object-fit: cover;" />
                }
                else
                {
                    <img src="/Uploads/thumbnails/default.jpg" class="card-img-top" alt="Default Thumbnail" style="max-height: 300px; object-fit: cover;" />
                }
            </a>
            <div class="card-body">
                <h5 class="card-title" style="color: #D87A3A;">@Model.FeaturedVideo.Title</h5>
                <p class="card-text">
                    <small class="text-muted" style="color: #28A745 !important;">@Model.FeaturedVideo.Genre • Uploaded on @Model.FeaturedVideo.UploadDate.ToString("MMM dd, yyyy")</small>
                </p>
                <div class="d-flex gap-2">
                    <a asp-action="Details" asp-controller="Videos" asp-route-id="@Model.FeaturedVideo.Id" class="btn btn-success">Watch Now</a>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        var isFavorited = favoritedVideoIds.Contains(Model.FeaturedVideo.Id);
                        <form asp-action="@(isFavorited ? "Remove" : "Add")" asp-controller="Favorites" method="post">
                            <input type="hidden" name="videoId" value="@Model.FeaturedVideo.Id" />
                            <button type="submit" class="btn btn-primary">@(isFavorited ? "Remove from Favorites" : "Add to Favorites")</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Recommended Videos Section -->
    @if (Model.RecommendedVideos != null && Model.RecommendedVideos.Any())
    {
        <h2>Recommended Videos</h2>
        <div class="row mb-4">
            @foreach (var video in Model.RecommendedVideos)
            {
                <div class="col-md-4">
                    <div class="card">
                        <a href="@Url.Action("Details", "Videos", new { id = video.Id })">
                            @if (!string.IsNullOrEmpty(video.ThumbnailUrl))
                            {
                                <img src="@video.ThumbnailUrl" class="card-img-top" alt="@video.Title Thumbnail" style="height: 200px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/Uploads/thumbnails/default.jpg" class="card-img-top" alt="Default Thumbnail" style="height: 200px; object-fit: cover;" />
                            }
                        </a>
                        <div class="card-body">
                            <h5 class="card-title" style="color: #D87A3A;">@video.Title</h5>
                            <p class="card-text">
                                <small class="text-muted" style="color: #28A745 !important;">@video.Genre • Uploaded on @video.UploadDate.ToString("MMM dd, yyyy")</small>
                            </p>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-controller="Videos" asp-route-id="@video.Id" class="btn btn-success">Watch Now</a>
                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    var isFavorited = favoritedVideoIds.Contains(video.Id);
                                    <form asp-action="@(isFavorited ? "Remove" : "Add")" asp-controller="Favorites" method="post">
                                        <input type="hidden" name="videoId" value="@video.Id" />
                                        <button type="submit" class="btn btn-primary">@(isFavorited ? "Remove from Favorites" : "Add to Favorites")</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- All Videos Section -->
    <h2>All Videos</h2>
    <div class="row">
        @foreach (var video in Model.Videos)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <a href="@Url.Action("Details", "Videos", new { id = video.Id })">
                        @if (!string.IsNullOrEmpty(video.ThumbnailUrl))
                        {
                            <img src="@video.ThumbnailUrl" class="card-img-top" alt="@video.Title Thumbnail" style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="/Uploads/thumbnails/default.jpg" class="card-img-top" alt="Default Thumbnail" style="height: 200px; object-fit: cover;" />
                        }
                    </a>
                    <div class="card-body">
                        <h5 class="card-title" style="color: #D87A3A;">@video.Title</h5>
                        <p class="card-text">
                            <small class="text-muted" style="color: #28A745 !important;">@video.Genre • Uploaded on @video.UploadDate.ToString("MMM dd, yyyy")</small>
                        </p>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-controller="Videos" asp-route-id="@video.Id" class="btn btn-success">Watch Now</a>
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                var isFavorited = favoritedVideoIds.Contains(video.Id);
                                <form asp-action="@(isFavorited ? "Remove" : "Add")" asp-controller="Favorites" method="post">
                                    <input type="hidden" name="videoId" value="@video.Id" />
                                    <button type="submit" class="btn btn-primary">@(isFavorited ? "Remove from Favorites" : "Add to Favorites")</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>