@model EduMation.Models.Subscription
@{
    ViewData["Title"] = "Delete Subscription";
}
<h1>Delete Subscription</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Subscription</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Plan</dt>
        <dd class="col-sm-10">@Model.Plan</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>